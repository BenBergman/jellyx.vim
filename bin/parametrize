#!/usr/bin/env ruby
# encoding: utf-8
#
# simple line filter for converting to JellyX::HI command parameters

$stdin.read.split("\n").each do |line|
  hi = line.split.inject({}) do |hash, word|
    h.merge case word
    when /\Ahi/ then {}
    when /=/    then Hash[*word.split '=']
    else Hash['name', word]
    end
  end

  puts 'HI %-15s %-7s %-7s %-s' % [
    hi['name'],
    hi['guifg'] || %q(''),
    hi['guibg'] || %q(''),
    hi['cterm'] || %q(none)
  ]
end
